<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <% if @categories %>
      <div class='input-group'>
        <%= f.select :category_id,
            options_from_collection_for_select(@categories, "id", "title"),
            prompt: "Category" %>
      </div>
  <% else %>
    <div class="input-group">
        <p class="form-control">
          <%= "No categories available. Please create a new category." %>
        </p>
    </div>
  <% end %>

  <%= f.submit %>
<% end %>
